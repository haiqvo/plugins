<config>    
    <modules>
        <Splurgy_Embeds>
            <version>0.1.0</version>
        </Splurgy_Embeds>
    </modules>
    <frontend>
        <routers>
            <embeds>
                <use>standard</use>
                <args>
                    <module>Splurgy_Embeds</module>
                    <frontName>embeds</frontName>
                </args>
            </embeds>
        </routers>  
        <layout>
            <updates>
                <embeds>
                    <file>embeds.xml</file>
                </embeds>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <embeds>
                <class>Splurgy_Embeds_Model</class>
                <resourceModel>embeds_mysql4</resourceModel>
            </embeds>
            <embeds_mysql4>
                <class>Splurgy_Embeds_Model_Mysql4</class>
                <entities>
                    <embeds>
                        <table>embeds</table>
                    </embeds>
                </entities>
            </embeds_mysql4>
        </models>
        <resources>
            <embeds_setup>
                <setup>
                    <embeds>Splurgy_Embeds</embeds>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </embeds_setup>
            <embeds_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </embeds_write>
            <embeds_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </embeds_read>
        </resources>
        <blocks>
            <embeds>
                <class>Splurgy_Embeds_Block</class>
            </embeds>
        </blocks>
        <helpers>
            <embeds>
                <class>Splurgy_Embeds_Helper</class>
            </embeds>
        </helpers>
    </global>
    <admin>
        <routers>
            <embeds>
                <use>admin</use>
                <args>
                    <module>Splurgy_Embeds</module>
                    <frontName>embeds</frontName>
                </args>
            </embeds>
        </routers>
        <!-- default admin design package and theme -->
        <design>
            <package>
                <name>base</name>
            </package>
            <theme>
                <default>default</default>
            </theme>
        </design>
    </admin>
    <adminhtml>
        <menu>
            <embeds translate="title" module="embeds">
                <title>Splurgy</title> 
                <sort_order>9999</sort_order>
                <children>
                    <settings module="embeds">
                        <title>Power Switches</title> 
                        <action>embeds/index/settings</action>
                    </settings>
                </children>
                <!--
                <children>
                    <analytics>
                        <title>Analytics</title> 
                        <action>splurgy/index/analytics</action>
                    </analytics>
                </children>
                -->
                <sort_order>71</sort_order>               
                <children>
                    <items module="Embeds">
                        <title>Manage Offers</title>
                        <sort_order>0</sort_order>
                        <action>embeds/adminhtml_embeds</action>
                    </items>
                </children>
            </embeds>
        </menu> 
        <layout>
            <updates handle="index_settings">
                <embeds>
                    <file>embeds.xml</file>
                </embeds>
            </updates>
        </layout>
        <events>
            <catalog_product_save_after>
                <observers>
                    <splurgy_save_product_data>
                        <type>singleton</type>
                        <class>embeds/observer</class>
                        <method>savingData</method>
                    </splurgy_save_product_data>
                </observers>
            </catalog_product_save_after>
        </events>
        <acl>
            <all>
                    <title>Allow Everything</title>
            </all>
            <resources>
                <admin>
                    <children>
                        <embeds>
                            <title>Embeds Module</title>
                            <sort_order>200</sort_order>
                        </embeds>
                    </children>
                </admin>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <embeds_options>
                                            <title>Store Hello World Module Section</title>
                                        </embeds_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>