<?xml version="1.0"?>
<config>

    <tabs>
        <splurgy translate="label" module="embeds">
            <label>Splurgy</label>
            <sort_order>300</sort_order>
        </splurgy>
    </tabs>
    
    <!-- 
       when creating a new config field:
       (1) add <backend_model>Zizio_Powershare_Model_System_Config_Data</backend_model>
       (2) add <frontend_model>Zizio_Powershare_Model_System_Config_Field</frontend_model>
       (3) add map to Zizio_Powershare_Model_System_Config_Data::$xml2alias
    -->
    
    <sections>
        <embeds_options translate="label" module="embeds">
            <label>Setup Token</label>
            <tab>splurgy</tab>
            <frontend_type>text</frontend_type>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <setup_token>
                    <label>Token Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <token translate="label">
                            <label>Token</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[
                            Your token can be found in your <a href="https://offers.splurgy.com/dashboard">Splurgy Control Panel</a> Click <b>Channel</b> in the navigation bar, and find the channel token that you want the widget to take.
                            ]]></comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <backend_model>Splurgy_Embeds_Model_Token</backend_model>
                        </token>
                    </fields>
                </setup_token>
           </groups>
        </embeds_options>
    </sections>
    
</config>