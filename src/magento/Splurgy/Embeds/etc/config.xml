<config>    
    <modules>
        <Splurgy_Embeds>
            <version>0.1.0</version>
        </Splurgy_Embeds>
    </modules>
    <frontend>
        <routers>
            <embeds>
                <use>standard</use>
                <args>
                    <module>Splurgy_Embeds</module>
                    <frontName>splurgy</frontName>
                </args>
            </embeds>
        </routers>  
    </frontend>
    <global>
        <helpers>
            <embeds>
                <class>Splurgy_Embeds_Helper</class>
            </embeds>
        </helpers>
    </global>   
    <admin>
        <routers>
            <the_name_of_this_element_is_not_important_it_should_be_unique>
                <use>admin</use>
                <args>
                    <module>Splurgy_Embeds</module>
                    <frontName>splurgy</frontName>
                </args>
            </the_name_of_this_element_is_not_important_it_should_be_unique>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <splurgy translate="title" module="embeds">
                <title>Splurgy</title> 
                <sort_order>9999</sort_order>
                <children>
                    <settings module="embeds">
                        <title>Settings</title> 
                        <action>splurgy/index/settings</action>
                    </settings>
                </children>
                <children>
                    <analytics>
                        <title>Analytics</title> 
                        <action>splurgy/index/analytics</action>
                    </analytics>
                </children>
            </splurgy>
        </menu> 
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <embeds_options>
                                            <title>Store Hello World Module Section</title>
                                        </embeds_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>